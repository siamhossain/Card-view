<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cardview.DrugDetails">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Napa Extra"
        android:id="@+id/napa_id"
        android:textSize="40dp"
        android:textStyle="bold"
        android:gravity="center"/>
        <ImageView
            android:id="@+id/napa_image_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/napaextra"
            android:layout_marginBottom="350dp"
            android:layout_below="@+id/napa_id"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type: Tablet
Indication: It is indicated for the relief of fever, migraine and headache, common colds and flu, sore throat. earache, toothache, backache, rheumatic and muscular pain, neuralgia and menstrual pain.
Side effects: In recommended doses, it is usually free from side effects. However, skin reactions such as urticaria have been reported rarely."
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="188dp"
        android:textSize="20dp"/>



</RelativeLayout>
