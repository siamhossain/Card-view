<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="card">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">190dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name = "card_linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">15dp</item>
        <item name="android:weightSum">15</item>
    </style>

    <style name="card_image_view">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">15</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/rectanglebackground</item>
    </style>

    <style name="card_text_view">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/lightGray</item>
    </style>

</resources>
